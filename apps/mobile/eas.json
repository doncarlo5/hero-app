{
	"cli": {
		"requireCommit": true,
		"appVersionSource": "remote"
	},
	"build": {
		"development": {
			"developmentClient": true,
			"distribution": "internal",
			"env": {
				"EXPO_ROUTER_APP_ROOT": "./app"
			}
		},
		"development-simulator": {
			"developmentClient": true,
			"ios": { "simulator": true },
			"env": {
				"EXPO_ROUTER_APP_ROOT": "./app"
			}
		},
		"production": {
			"autoIncrement": true,
			"distribution": "store",
			"env": {
				"EXPO_ROUTER_APP_ROOT": "./app"
			},
			"ios": {
				"resourceClass": "m-medium",
				"buildConfiguration": "Release"
			}
		}
	},
	"submit": {
		"production": {}
	}
}
