{
	"name": "hero-app-mobile",
	"version": "1.0.0",
	"main": "expo-router/entry",
	"packageManager": "npm@10.0.0",
	"scripts": {
		"start": "expo start --dev-client",
		"web": "expo start --web",
		"android": "expo run:android",
		"ios": "expo run:ios",
		"lint": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"generate-colors": "node ./scripts/generate-colors.js && eslint ./constants/colors.ts --fix",
		"postinstall": "cd ../.. && npm run build"
	},
	"dependencies": {
		"@expo/ui": "~0.1.1-alpha.10",
		"@gorhom/bottom-sheet": "^5.1.6",
		"@hookform/resolvers": "^5.0.1",
		"@react-native-async-storage/async-storage": "2.1.2",
		"@rn-primitives/label": "^1.1.0",
		"@rn-primitives/radio-group": "^1.1.0",
		"@rn-primitives/slot": "^1.1.0",
		"@rn-primitives/switch": "^1.1.0",
		"@rn-primitives/types": "^1.1.0",
		"@rneui/base": "^4.0.0-rc.7",
		"@rneui/themed": "^4.0.0-rc.7",
		"@supabase/supabase-js": "^2.50.0",
		"aes-js": "^3.1.2",
		"ajv": "^8.17.1",
		"ajv-keywords": "^5.1.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"expo": "~53.0.23",
		"expo-audio": "~0.4.8",
		"expo-auth-session": "^6.2.1",
		"expo-constants": "~17.1.6",
		"expo-dev-client": "~5.2.4",
		"expo-haptics": "~14.1.4",
		"expo-image": "~2.4.0",
		"expo-linking": "~7.1.7",
		"expo-router": "~5.1.3",
		"expo-secure-store": "~14.2.3",
		"expo-status-bar": "~2.2.3",
		"expo-system-ui": "~5.0.10",
		"expo-web-browser": "^14.2.0",
		"lucide-react-native": "^0.312.0",
		"nativewind": "^4.1.23",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"react-hook-form": "^7.55.0",
		"react-native": "0.79.5",
		"react-native-countdown-circle-timer": "^3.2.1",
		"react-native-gesture-handler": "~2.24.0",
		"react-native-get-random-values": "~1.11.0",
		"react-native-pager-view": "6.7.1",
		"react-native-reanimated": "~3.17.4",
		"react-native-safe-area-context": "5.4.0",
		"react-native-screens": "~4.11.1",
		"react-native-svg": "15.11.2",
		"react-native-url-polyfill": "^2.0.0",
		"react-native-web": "^0.20.0",
		"tailwind-merge": "^3.2.0",
		"tailwindcss": "~3.4.17",
		"victory-native": "^37.3.6",
		"zod": "^3.24.3"
	},
	"devDependencies": {
		"@babel/core": "^7.20.0",
		"@react-native-community/cli": "latest",
		"@types/aes-js": "^3.1.4",
		"@types/react": "~19.0.10",
		"eslint": "^9.0.0",
		"eslint-config-expo": "~9.2.0",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-prettier": "^5.2.6",
		"prettier": "^3.5.3",
		"typescript": "~5.8.3"
	},
	"expo": {
		"install": {
			"exclude": [
				"@supabase/supabase-js"
			]
		},
		"doctor": {
			"reactNativeDirectoryCheck": {
				"exclude": [
					"@rneui/base",
					"@rneui/themed",
					"aes-js",
					"ajv",
					"ajv-keywords"
				],
				"listUnknownPackages": false
			}
		}
	},
	"private": true
}
