export * from './label';
import { SlottablePressableProps, PressableRef, SlottableTextProps } from '@rn-primitives/types';
export { TextRef } from '@rn-primitives/types';
import { ViewStyle } from 'react-native';

type RootProps = Omit<SlottablePressableProps, 'children' | 'hitSlop' | 'style'> & {
    children: React.ReactNode;
    style?: ViewStyle;
};
type TextProps = SlottableTextProps & {
    /**
     * Equivalent to `id` so that the same value can be passed as `aria-labelledby` to the input element.
     */
    nativeID?: string;
    /**
     * WEB ONLY
     */
    htmlFor?: string;
};
type RootRef = PressableRef;

export type { RootProps, RootRef, TextProps };
